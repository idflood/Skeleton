extends /layout/layout

block htmlhead
    title Basler & Hofmann
    meta(name='description', content='')

block htmlbody
  +header({}, {active: "Projekte"})
  .js-search(data-search-items-selector=".item-project")
    .l-l-width.l-spacing-v-l
      h1.t-title.t-border-bottom Projekte

      +search-field({ placeholder: 'Suche in Projekten' }, {})
        +filter({label: "Filter nach ", filterValue: "Kompetenz", filterAttribute: 'expertise'}, {})

    .l-l-width.l-margin-v-l
      .l-grid
        .l-grid-cell.l-thirty-seven
          +item-project({
            title: "Pistensanierung Zürich Flughafen",
            imgSrc: relativePath + 'assets/projects/project1.jpg',
            legend: "Pistensanierung unter vollem Flugbetrieb",
            link: './detail-project.html',
            filter: "Bahnbau",
            attributes: { expertise: 'Bahnbau' }
          }, {legend: true})

