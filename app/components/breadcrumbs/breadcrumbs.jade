mixin breadcrumbs (data, options)
  - options = setOptionsDefaults(options, "breadcrumbs", components.breadcrumbs)

  .l-xl-width
    ul.breadcrumbs
      each breadcrumb, index in data.pages
        li.breadcrumbs-item
          - var isLink = index < data.pages.length - 1
          if isLink
            a.breadcrumbs-item--link(href=breadcrumb.href)= breadcrumb.name
          else
            | #{breadcrumb.name}
