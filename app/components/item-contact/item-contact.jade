mixin item-contact(data, options)
  - options = setOptionsDefaults(options, "item-contact", components["item-contact"])

  - var dataAttributes = {}
  if data.attributes
    each val, key in data.attributes
      - dataAttributes['data-' + key] = val

  .item-contact.vcard(itemscope, itemtype="http://schema.org/Person")&attributes(dataAttributes)
    img.item-contact-image(itemprop="image", alt=data.firstname + ' ' + data.lastname, src=data.imgSrc)
    .item-contact-title.fn(itemprop="name")= data.firstname + ' ' + data.lastname
    .item-contact-text
      span(itemprop="jobTitle")= data.role
      span , Bereich #{data.region}
      div.tel(itemprop="telephone")= data.phone
      a(href="mailto:" + data.email) Email
